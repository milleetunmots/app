<%= semantic_form_for(Workshop.new, url: @perform_action) do |f| %>

  <%= f.inputs do %>

    <%= f.hidden_field  :workshop_id,
                        name: 'workshop_id',
                        value: @workshop_id %>
    <%= f.hidden_field  :time_slot,
                        name: 'time_slot',
                        value: @time_slot %>

    <%= f.input :parent_selection,
                as: :select,
                label: "Parents",
                input_html: {
                  class: 'workshop-parent-select',
                  data: {
                    url: parents_admin_children_path,
                    multiple: true
                  }
                }
    %>

    <%= f.input :parent_ids, as: :hidden %>

    <%= f.actions do %>
      <%= f.action :submit, label: 'Valider' %>
    <% end %>

  <% end %>

<% end %>

<%= javascript_tag do %>
  $('body').addClass('edit');
<% end %>
