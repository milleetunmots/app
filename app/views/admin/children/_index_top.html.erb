<% full_collection = collection.object.limit(nil) %>
<% children_count = full_collection.count %>
<% families_count = full_collection.families_count %>
<% fathers_count = full_collection.fathers_count %>

<div class="big-numbers">

  <div class="big-number txt-blue">
    <div class="big-number--value">
      <%= children_count %>
    </div>
    <div class="big-number--title">
      <%= pluralize_without_count children_count, 'Enfant' %>
    </div>
  </div>

  <div class="big-number txt-rose">
    <div class="big-number--value">
      <%= families_count %>
    </div>
    <div class="big-number--title">
      <%= pluralize_without_count families_count, 'Famille' %>
    </div>
  </div>

  <div class="big-number txt-green">
    <div class="big-number--value">
      <%= fathers_count %>
    </div>
