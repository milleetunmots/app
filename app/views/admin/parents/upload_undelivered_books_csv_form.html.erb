<%= form_with(url: process_csv_admin_parents_path, method: :post, local: true, multipart: true) do |f| %>
  <fieldset style='margin-bottom: 20px;'>
    <ol>
      <li class='input'>
        <%= f.label :csv_file, 'Fichier csv', class:'label', style: "font-weight: bold; text-align: left; padding-bottom: 0; height: 25px; width: 25%; float: left; padding-right: 20px;"%>
        <%= f.file_field :csv_file, required: true, accept: '.csv', style: "min-width: 50%; line-height: 43px;" %>
      </li>
    </ol>

    <fieldset style='padding-left: 25%'>
      <ol>
        <li style="display: inline-block; margin-right: 10px;">
          <%= f.submit 'Valider', style: "line-height: 43px;" %>
        </li>
      </ol>
    </fieldset>
  </div>
  
<% end %>
