<%= semantic_form_for(ChildSupport.new, url: @form_action) do |f| %>

  <%= f.inputs do %>

    <% @ids.each do |id| %>
      <%= f.hidden_field  :ids,
                          name: 'ids[]',
                          value: id %>
    <% end %>

    <%= f.hidden_field  :back_url,
                        name: :back_url,
                        value: @back_url %>

    <%= available_support_module_input f,
                                       :parent1_available_support_module_list,
                                       label: 'Modules disponibles',
                   input_html: {
                      name: 'available_support_module_list[]'
                   }
    %>

  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, label: 'Valider' %>
  <% end %>

<% end %>

<%= javascript_tag do %>
  $('body').addClass('edit');
<% end %>
