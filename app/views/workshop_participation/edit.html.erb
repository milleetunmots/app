<div id="update">

  <div class="container" id="update-content">

    <%= simple_form_for @workshop_participation, url: @workshop_participation_action_path do %>

      <% if @workshop_time_slots.size == 1 %>
        <h1>
          Allez-vous participer à l'atelier?
        </h1>

        <div class="text-center end-buttons">
          <button name="workshop_participation[workshop_time_slot]" value="1" type="submit" class="btn-primary btn-lg">
            Oui
          </button>
          <button name="workshop_participation[workshop_time_slot]" value="0" type="submit" class="btn-danger btn-lg">
            Non
          </button>
        </div>
      <% else %>
        <h1>
          A quel atelier voulez vous participer ?
        </h1>
        <div class="text-center end-buttons">
          <% @workshop_time_slots.each_with_index do |workshop_time_slot, index|  %>
            <button name="workshop_participation[workshop_time_slot]" value=<%= index + 1 %> type="submit" class="btn-primary btn-lg">
              Accepté l'atelier du <%= @workshop_date.strftime("%d/%m/%Y") %> Créneau <%= workshop_time_slot.strftime("%H:%M") %>
            </button>
          <% end %>
          <button name="workshop_participation[workshop_time_slot]" value="0" type="submit" class="btn-danger btn-lg">
            Refuser l'atelier
          </button>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
